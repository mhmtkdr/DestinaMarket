@using Microsoft.AspNet.Identity


<!DOCTYPE html>
<html>
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <title>@ViewBag.Title - Destina Market</title>

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Bootstrap  -->
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/bootstrap.css">

    <!-- Theme Style -->
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/responsive.css">

    <!-- Colors -->
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/colors/color1.css" id="colors">

    <!-- Animation Style -->
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/animate.css">


    <!-- Favicon and touch icons  -->
    <link href="~\Content\icon\/favic.png" rel="shortcut icon">

    <!--[if lt IE 9]>
        <script src="~/Content/javascript/html5shiv.js"></script>
        <script src="~/Content/javascript/respond.min.js"></script>
    <![endif]-->

    <script src="~/Content/javascript/jquery.min.js"></script>
    <script src="~/Content/javascript/jquery-ui.js"></script>

</head>
<body class="header_sticky header-style-2 has-menu-extra">
    <!-- Preloader -->
    <div id="loading-overlay">
        <div class="loader"></div>
    </div>

    <!-- Boxed -->
    <div class="boxed">
        <div id="site-header-wrap">
            <!-- Header -->
            <header id="header" class="header clearfix">
                <div class="container-fluid clearfix container-width-93" id="site-header-inner">
                    <div id="logo" class="logo float-left">
                        <a href="@Url.Action("Index", "Home")" title="logo">
                            <img src="~/Content/images/DestinaMarket1.png" alt="image" width="214" height="48" data-retina="content/images/DestinaMarket1.png" data-width="214" data-height="48">
                        </a>
                    </div><!-- /.logo -->
                    <div class="mobile-button"><span></span></div>
                    <ul class="menu-extra">
                        <li class="box-search">
                            <a class="icon_search header-search-icon" href="#"></a>
                            <form role="search" method="get" class="header-search-form" action="#">
                                <input type="text" value="" name="s" class="header-search-field" placeholder="Ara...">
                                <button type="submit" class="header-search-submit" title="Search">Ara</button>
                            </form>
                        </li>
                        @*@if (User.Identity.IsAuthenticated)
                        {
                            <li class="box-login">
                                <a class="icon_login" href="#">
                                    @User.Identity.Name
                                </a>
                            </li>
                        }*@

                        <li class="box-cart nav-top-cart-wrapper">
                            <a class="icon_cart nav-cart-trigger active" href="@Url.Action("Checkout", "Shop")"><span id="cartProductsCount">0</span></a>
                        </li>

                        <li class="box-login box-cart nav-top-cart-wrapper">
                            <a class="icon_login nav-cart-trigger active" href="#"></a>
                            <div class="nav-shop-cart">
                                <div class="widget_shopping_cart_content">
                                    <div class="woocommerce-min-cart-wrap">
                                        <ul class="menu">
                                            @*<li>
            <a href="/">@User.Identity.Name</a>
        </li>*@
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                    <li><a href="@Url.Action("AdminPanel", "Home")">İşlemler</a></li>
                                            }
                                            <li>
                                                @if (Request.IsAuthenticated)
                                                {
                                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                                    {
                                                        @Html.AntiForgeryToken()

                                                        <ul class="nav navbar-nav navbar-right">
                                                            <li>
                                                                @Html.ActionLink("Merhaba " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                                            </li>
                                                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Oturumu kapat</a></li>
                                                        </ul>
                                                    }
                                                }
                                                else
                                                {
                                                    <ul class="nav navbar-nav navbar-right">
                                                        <li>@Html.ActionLink("Kaydol", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                                        <li>@Html.ActionLink("Oturum aç", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                                                    </ul>
                                                }
                                            </li>
                                        </ul>
                                    </div><!-- /.widget_shopping_cart_content -->
                                </div>
                            </div><!-- /.nav-shop-cart -->
                        </li>

                    </ul><!-- /.menu-extra -->
                    <div class="nav-wrap">
                        <nav id="mainnav" class="mainnav">
                            <ul class="menu">
                                <li>
                                    <a href="@Url.Action("Index", "Home")">Ana Menü</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Shop")">Kategoriler</a>
                                    <ul class="submenu">
                                        <li><a href="@Url.Action("Index", "Shop")">Telefonlar</a></li>
                                        <li><a href="@Url.Action("Index", "Shop")">Bilgisayarlar</a></li>
                                        <li><a href="@Url.Action("Index", "Shop")">Televizyonlar</a></li>
                                        <li><a href="@Url.Action("Index", "Shop")">Kameralar</a></li>
                                        <li><a href="@Url.Action("Index", "Shop")">Aksesuarlar</a></li>
                                        <li><a href="@Url.Action("Index", "Shop")">Ev Aletleri</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Shop")">Ürünler</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Checkout", "Shop")">Sepet</a>
                                </li>
                            </ul>
                        </nav><!-- /.mainnav -->
                    </div><!-- /.nav-wrap -->
                </div><!-- /.container-fluid -->
            </header><!-- /header -->
        </div><!-- /.site-header-wrap -->

        @RenderBody()

        <section class="flat-row mail-chimp">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text">
                            <h3>Yenilikler İçin Abone Ol</h3>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="subscribe clearfix">
                            <form action="#" method="post" accept-charset="utf-8" id="subscribe-form">
                                <div class="subscribe-content">
                                    <div class="input">
                                        <input type="email" name="subscribe-email" placeholder="E-mail">
                                    </div>
                                    <div class="button">
                                        <button type="button">Abone Ol</button>
                                    </div>
                                </div>
                            </form>
                            @*<ul class="flat-social">
                                    <li><a href="@ConfigurationsService.Instance.GetConfig(" FacebookURL").Value"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="@ConfigurationsService.Instance.GetConfig(" InstagramURL").Value"><i class="fa fa-instagram"></i></a></li>
                                    <li><a href="@ConfigurationsService.Instance.GetConfig(" GitHubURL").Value"><i class="fa fa-github"></i></a></li>
                                    <li><a href="@ConfigurationsService.Instance.GetConfig(" LinkedinURL").Value"><i class="fa fa-linkedin"></i></a></li>
                                </ul>*@<!-- /.flat-social -->
                        </div><!-- /.subscribe -->
                    </div>
                </div>
            </div>
        </section><!-- /.mail-chimp -->
        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="widget widget-link">
                            <ul>
                                <li><a href="#">Bizim Hakkımızda</a></li>
                                <li><a href="#">Yenilikler</a></li>
                                <li><a href="blog-list.html">Blog</a></li>
                                <li><a href="contact.html">İletişim</a></li>
                            </ul>
                        </div><!-- /.widget -->
                    </div><!-- /.col-md-3 -->
                    <div class="col-md-3">
                        <div class="widget widget-link link-login">
                            <ul>
                                <li><a href="#">Giriş / Kaydol</a></li>
                                <li><a href="#">Sepetiniz</a></li>
                                <li><a href="#">İstek Listesi</a></li>
                                <li><a href="#">Siparişleriniz</a></li>
                            </ul>
                        </div><!-- /.widget -->
                    </div><!-- /.col-md-3 -->
                    <div class="col-md-3">
                        <div class="widget widget-link link-faq">
                            <ul>
                                <li><a href="faqs.html">FAQs</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                                <li><a href="#">Kargo Hizmetlerimiz</a></li>
                            </ul>
                        </div><!-- /.widget -->
                    </div><!-- /.col-md-3 -->
                    <div class="col-md-3">
                        <div class="widget widget-brand">
                            <div class="logo logo-footer">
                                <a href="" index.html""><img src="~/Content/images/DestinaMarket.png" alt="image" width="107" height="24"></a>
                            </div>
                            <ul class="flat-contact">
                                <li class="address">Dursunbey, Balıkesir</li>
                                @*<li class="phone">@ConfigurationsService.Instance.GetConfig("CompanyPhone").Value</li>*@
                                <li class="email">mkadirkuzucu@gmail.com</li>
                            </ul><!-- /.flat-contact -->
                        </div><!-- /.widget -->
                    </div><!-- /.col-md-3 -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </footer><!-- /.footer -->

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="copyright text-center">Copyright 2020 <a href="#">Mehmet Kadir KUZUCU</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Go Top -->
        <a class="go-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- Javascript -->
    <script src="~/Content/javascript/tether.min.js"></script>
    <script src="~/Content/javascript/bootstrap.min.js"></script>
    <script src="~/Content/javascript/jquery.easing.js"></script>
    <script src="~/Content/javascript/parallax.js"></script>
    <script src="~/Content/javascript/jquery-waypoints.js"></script>
    <script src="~/Content/javascript/jquery-countTo.js"></script>
    <script src="~/Content/javascript/jquery.countdown.js"></script>
    <script src="~/Content/javascript/jquery.flexslider-min.js"></script>
    <script src="~/Content/javascript/images-loaded.js"></script>
    <script src="~/Content/javascript/jquery.isotope.min.js"></script>
    <script src="~/Content/javascript/magnific.popup.min.js"></script>
    <script src="~/Content/javascript/jquery.hoverdir.js"></script>
    <script src="~/Content/javascript/owl.carousel.min.js"></script>
    <script src="~/Content/javascript/equalize.min.js"></script>
    <script src="~/Content/javascript/gmap3.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAIEU6OT3xqCksCetQeNLIPps6-AYrhq-s&region=GB"></script>
    <script src="~/Content/javascript/jquery-ui.js"></script>

    <script src="~/Content/javascript/jquery.cookie.js"></script>
    <script src="~/Content/javascript/main.js"></script>

